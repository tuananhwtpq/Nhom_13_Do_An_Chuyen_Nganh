<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="16dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewCart"
        android:layout_width="347dp"
        android:layout_height="103dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:cardCornerRadius="15dp"
        app:cardElevation="10dp"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayoutCart"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imgCart"
                android:layout_width="62dp"
                android:layout_height="62dp"
                android:layout_marginStart="12dp"
                android:scaleType="fitXY"
                android:src="@drawable/burger"
                app:layout_constraintBottom_toBottomOf="@id/constraintLayoutCart"
                app:layout_constraintStart_toStartOf="@id/constraintLayoutCart"
                app:layout_constraintTop_toTopOf="@id/constraintLayoutCart" />
            <TextView
                android:id="@+id/textNameInCart"
                android:layout_width="104dp"
                android:layout_height="25dp"
                android:text="Burger King"
                android:textSize="15dp"
                android:textAlignment="center"
                app:layout_constraintStart_toEndOf="@id/imgCart"
                app:layout_constraintTop_toTopOf="@id/constraintLayoutCart"
                app:layout_constraintBottom_toBottomOf="@id/constraintLayoutCart"
                android:layout_marginStart="12dp"
                android:layout_marginBottom="27dp"
                />

            <TextView
                android:id="@+id/textCostInCart"
                android:layout_width="38dp"
                android:layout_height="25dp"
                android:text="$35"
                android:textAlignment="center"
                android:textColor="@color/textcolor"
                android:textSize="19dp"
                android:layout_marginBottom="20dp"
                app:layout_constraintBottom_toBottomOf="@id/constraintLayoutCart"
                app:layout_constraintEnd_toEndOf="@id/textNameInCart"
                app:layout_constraintStart_toStartOf="@+id/textNameInCart"
                app:layout_constraintTop_toBottomOf="@id/textNameInCart" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnLess"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:background="@drawable/greenbtnlessplus"
                android:elevation="5dp"
                android:text="-"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="20dp"
                app:layout_constraintEnd_toStartOf="@id/textQuantityInCart"
                app:layout_constraintTop_toTopOf="@id/btnPlus"
                app:layout_constraintBottom_toBottomOf="@id/textQuantityInCart"/>

            <TextView
                android:id="@+id/textQuantityInCart"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:text="1"
                android:textAlignment="center"
                android:textSize="15dp"
                app:layout_constraintTop_toTopOf="@id/btnPlus"
                app:layout_constraintEnd_toStartOf="@id/btnPlus"
                app:layout_constraintBottom_toBottomOf="@id/btnPlus"
                />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnPlus"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:background="@drawable/greenbtnlessplus"
                android:elevation="5dp"
                android:text="+"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="15dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"/>

            <ImageView
                android:id="@+id/imgTrashInCart"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/trash_03"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btnPlus"
                app:layout_constraintEnd_toEndOf="@id/textQuantityInCart"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>