<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.SignActivity">
    
    <ImageView
        android:id="@+id/imglogosign"
        android:layout_width="91dp"
        android:layout_height="92dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="70dp"
        android:src="@drawable/logo"
        >
    </ImageView>

    <TextView
        android:id="@+id/textViewBrand"
        android:layout_width="242dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@+id/imglogosign"
        app:layout_constraintStart_toStartOf="@id/imglogosign"
        app:layout_constraintEnd_toEndOf="@id/imglogosign"
        android:textAlignment="center"
        android:text="Food Odering"
        android:textSize="40dp"
        android:textColor="@color/textcolor"
        android:fontFamily="sans-serif-medium" />

    <TextView
        android:id="@+id/textDes"
        android:layout_width="162dp"
        android:layout_height="20dp"
        android:textColor="@color/textcolor"
        android:text="Deliever Favorite Food"
        android:textSize="18dp"
        app:layout_constraintStart_toStartOf="@id/textViewBrand"
        app:layout_constraintTop_toBottomOf="@+id/textViewBrand"
        app:layout_constraintEnd_toEndOf="@id/textViewBrand"
        android:layout_marginTop="8dp"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/textSign"
        android:layout_width="131dp"
        android:layout_height="27dp"
        android:layout_marginTop="16dp"
        android:text="Sign Up Here"
        android:textAlignment="center"
        android:textColor="@color/textcolor"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="@+id/textDes"
        app:layout_constraintStart_toStartOf="@+id/textDes"
        app:layout_constraintTop_toBottomOf="@+id/textDes"

        />
    <EditText
        android:id="@+id/editTextSignName"
        android:layout_width="325dp"
        android:layout_height="57dp"
        android:hint="Name"
        android:drawableLeft="@drawable/user"
        android:paddingLeft="15dp"
        android:drawablePadding="15dp"
        android:ems="10"
        android:elevation="10dp"
        android:background="@drawable/edittextshape"
        app:layout_constraintTop_toBottomOf="@+id/textSign"
        app:layout_constraintStart_toStartOf="@+id/textSign"
        app:layout_constraintEnd_toEndOf="@+id/textSign"
        android:layout_marginTop="16dp"
        />
    <EditText
        android:layout_width="325dp"
        android:layout_height="57dp"
        android:id="@+id/editTextSignEmail"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:drawableLeft="@drawable/mail_02"
        android:paddingLeft="15dp"
        android:drawablePadding="15dp"
        android:ems="10"
        android:elevation="10dp"
        app:layout_constraintTop_toBottomOf="@id/editTextSignName"
        app:layout_constraintStart_toStartOf="@+id/editTextSignName"
        app:layout_constraintEnd_toEndOf="@+id/editTextSignName"
        android:layout_marginTop="12dp"
        android:background="@drawable/edittextshape"
        />
    <EditText
        android:id="@+id/editTextSignPassword"
        android:layout_width="325dp"
        android:layout_height="57dp"
        android:hint="Password"
        android:inputType="textPassword"
        android:drawableLeft="@drawable/lock"
        android:drawableRight="@drawable/hide"
        android:paddingLeft="15dp"
        android:drawablePadding="15dp"
        android:paddingRight="15dp"
        android:ems="10"
        android:elevation="10dp"
        android:background="@drawable/edittextshape"
        app:layout_constraintTop_toBottomOf="@id/editTextSignEmail"
        app:layout_constraintEnd_toEndOf="@id/editTextSignEmail"
        app:layout_constraintStart_toStartOf="@id/editTextSignEmail"
        android:layout_marginTop="12dp"

        />
    <TextView
        android:id="@+id/textViewSignTextOr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="or"
        app:layout_constraintEnd_toEndOf="@+id/editTextSignPassword"
        app:layout_constraintHorizontal_bias="0.427"
        app:layout_constraintStart_toStartOf="@+id/editTextSignPassword"
        app:layout_constraintTop_toBottomOf="@+id/editTextSignPassword" />

    <TextView
        android:id="@+id/textViewSignTextContinue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Continue With"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/textViewSignTextOr"
        app:layout_constraintHorizontal_bias="0.391"
        app:layout_constraintStart_toStartOf="@+id/textViewSignTextOr"
        app:layout_constraintTop_toBottomOf="@+id/textViewSignTextOr" />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonFb"
        android:layout_width="152dp"
        android:layout_height="57dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/whitebtn"
        android:drawableLeft="@drawable/facebook"
        android:padding="15dp"
        android:text="Facebook"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"

        app:layout_constraintTop_toBottomOf="@+id/textViewSignTextContinue" />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonGg"
        android:layout_width="152dp"
        android:layout_height="57dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/whitebtn"
        android:drawableLeft="@drawable/google_icon_1"
        android:padding="15dp"
        android:text="Google"
        android:textAllCaps="false"
        app:layout_constraintEnd_toStartOf="@+id/buttonFb"
        app:layout_constraintHorizontal_bias="0.39"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewSignTextContinue" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonLogin"
        android:layout_width="152dp"
        android:layout_height="57dp"
        android:layout_marginTop="76dp"
        android:background="@drawable/redbutton"
        android:padding="15dp"
        android:text="Create Account"
        android:textSize="17dp"
        android:textColor="@color/white"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewSignTextContinue" />

    <TextView
        android:id="@+id/textViewHaveAcc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Already Have An Account?"
        android:textColor="@color/textcolor"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonLogin"
        app:layout_constraintVertical_bias="0.282" />
</androidx.constraintlayout.widget.ConstraintLayout>