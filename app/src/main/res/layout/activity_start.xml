<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.StartActivity">

    <ImageView
        android:id="@+id/imageViewStartLogo"
        android:layout_width="377dp"
        android:layout_height="368dp"
        android:layout_marginTop="70dp"
        android:src="@drawable/bgstart"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewStartSlogan2"
        android:layout_width="357dp"
        android:layout_height="64dp"
        android:layout_marginTop="36dp"
        android:fontFamily="serif"
        android:text="Enjoy Restaurant Quality Meals  at Home"
        android:textAlignment="center"
        android:textColor="#EF7777"
        android:textSize="20sp"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="@+id/imageViewStartLogo"
        app:layout_constraintStart_toStartOf="@+id/imageViewStartLogo"
        app:layout_constraintTop_toBottomOf="@+id/imageViewStartLogo" />

    <TextView
        android:id="@+id/textViewAuthor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:text="Design By Group 13"
        android:textColor="#F27575"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnNext"
        android:layout_width="150dp"
        android:layout_height="63dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/redbutton"
        android:text="Next"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/textViewAuthor"
        app:layout_constraintEnd_toEndOf="@+id/textViewStartSlogan2"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="@+id/textViewStartSlogan2"
        app:layout_constraintTop_toBottomOf="@+id/textViewStartSlogan2" />
</androidx.constraintlayout.widget.ConstraintLayout>